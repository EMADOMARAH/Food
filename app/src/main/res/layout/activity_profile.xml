<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.profile.ProfileActivity"
        android:background="#EEF5FF"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#EEF5FF"
            android:gravity="center_horizontal"
            >

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/ic_health"
                android:layout_marginTop="40dp"
                />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="25dp"
                android:elevation="10dp"
                android:layout_marginHorizontal="50dp"
                android:layout_marginBottom="20dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="20dp"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Profile"
                        android:gravity="left"
                        android:textSize="30sp"
                        />

                    <com.google.android.material.textfield.TextInputLayout

                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        app:startIconDrawable="@drawable/ic_person"
                        app:startIconTint="@color/black"
                        android:textColorHint="#a29993"
                        app:errorEnabled="true"

                        >

                        <EditText
                            android:id="@+id/profile_input_email"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#FFFFFF"
                            android:singleLine="true"
                            android:drawablePadding="10dp"
                            android:inputType="textEmailAddress"
                            android:hint="Email"
                            android:textSize="15dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textCursorDrawable="@null"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout

                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        app:startIconDrawable="@drawable/ic_current_weight"
                        app:startIconTint="@color/black"
                        android:textColorHint="#a29993"
                        app:errorEnabled="true"
                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/profile_current_weight"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#FFFFFF"
                            android:singleLine="true"
                            android:drawablePadding="10dp"
                            android:inputType="number"
                            android:hint="Current weight"
                            android:textSize="15dp"
                            android:textColor="@color/black"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout

                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        app:startIconDrawable="@drawable/ic_current_weight"
                        app:startIconTint="@color/black"
                        android:textColorHint="#a29993"
                        app:errorEnabled="true"
                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/profile_desired_weight"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#FFFFFF"
                            android:singleLine="true"
                            android:drawablePadding="10dp"
                            android:inputType="number"
                            android:hint="Desired weight"
                            android:textSize="15dp"
                            android:textColor="@color/black"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout

                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        app:startIconDrawable="@drawable/ic_height"
                        app:startIconTint="@color/black"
                        android:textColorHint="#a29993"
                        app:errorEnabled="true"
                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/profile_height"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#FFFFFF"
                            android:singleLine="true"
                            android:drawablePadding="10dp"
                            android:inputType="number"
                            android:hint="Height in cm"
                            android:textSize="15dp"
                            android:textColor="@color/black"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout

                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        app:startIconDrawable="@drawable/ic_age"
                        app:startIconTint="@color/black"
                        android:textColorHint="#a29993"
                        app:errorEnabled="true"
                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/profile_age"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#FFFFFF"
                            android:singleLine="true"
                            android:drawablePadding="10dp"
                            android:inputType="number"
                            android:hint="Age"
                            android:textSize="15dp"
                            android:textColor="@color/black"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/profile_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_marginHorizontal="30dp"
                        >

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_gravity="center_horizontal"
                            android:backgroundTint="#40DDF1"
                            app:cardCornerRadius="15dp"
                            >

                            <Button
                                android:id="@+id/done_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:backgroundTint="#40DDF1"
                                android:text=" Done "
                                android:onClick="ProfileOnClick"
                                />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            />

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_gravity="center_horizontal"
                            android:backgroundTint="#40DDF1"
                            app:cardCornerRadius="15dp"
                            android:layout_marginTop="20dp"
                            >

                            <Button
                                android:id="@+id/logout_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:backgroundTint="#40DDF1"
                                android:text="Logout"
                                android:textAllCaps="false"
                                android:onClick="ProfileOnClick"
                                />
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</layout>